<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 사진/카메라 권한: 버전별로 선언 -->
    <!-- 모든 안드로이드 버전에서 카메라 권한 필요(카메라 촬영 시) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 카메라 하드웨어는 옵션(필수 아님)임을 명시 -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Android 12(API<=32) 이하: READ_EXTERNAL_STORAGE 필요 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <!-- Android 13(API>=33): READ_MEDIA_IMAGES 권한 사용 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- [REQUIRED] 광고 ID 권한 (Android 13+ 필수)
         - 목적: 개인화된 광고 게재 및 광고 성과 측정
         - 사용처: Google AdMob (전면 광고, 오픈 광고)
         - 사용자 선택권: UMP (User Messaging Platform) Consent 구현으로 사용자가 데이터 수집을 거부할 수 있음
         - 앱 시작 시 UMP Consent 다이얼로그를 통해 사용자 동의를 받음
         - Play Console 데이터 보안 섹션에서 이 권한 사용을 명시해야 함
         - 사용자는 Android 설정에서 광고 ID를 재설정하거나 삭제할 수 있음
    -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <queries>
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:name="kr.sweetapps.alcoholictimer.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlcoholicTimer"
        tools:targetApi="31">

        <activity
            android:name="kr.sweetapps.alcoholictimer.ui.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer.Splash"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${ADMOB_APP_ID}"/>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${crashlyticsCollectionEnabled}" />


        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

    </application>

</manifest>
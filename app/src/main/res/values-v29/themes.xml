<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- [FIX] Android 10+ (API 29+): AppCompat DayNight 테마로 변경 -->
    <style name="Theme.AlcoholicTimer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 기존 설정 유지 -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- 배경을 흰색으로 통일 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 대비 강제 해제: 얇은 상단/하단 구분선 제거 -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- 오버레이 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AlcoholicTimer.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 윈도우 배경 자체에 아이콘을 그려 표시 보장 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowSplashScreenBackground">#f28090</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.AlcoholicTimer</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- 대비 강제 해제 및 오버레이 제거 -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>

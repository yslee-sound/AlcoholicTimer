<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금주 중"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/tvDaysCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textSize="72sp"
                android:textStyle="bold"
                android:textColor="@color/text_accent"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvTimeUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="24sp"
                android:layout_toEndOf="@id/tvDaysCount"
                android:layout_alignBaseline="@id/tvDaysCount"
                android:layout_marginStart="4dp"/>

            <TextView
                android:id="@+id/tvHoursDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00시간"
                android:textSize="24sp"
                android:layout_toEndOf="@id/tvTimeUnit"
                android:layout_alignBaseline="@id/tvDaysCount"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <!-- 실시간 타이머 추가 -->

        <!-- 심플한 프로그레스바만 표시 -->
        <TextView
            android:id="@+id/tvTimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="00:00:00"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="30"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginBottom="48dp"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목표까지 30일 남았습니다. 힘내세요!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginBottom="48dp"/>

        <!-- 동그란 중지 버튼 수정 - 크기 1.5배로 증가 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnStopSobriety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            app:tint="#FFFFFF"
            android:src="@drawable/ic_stop"
            app:fabSize="normal"
            app:maxImageSize="40dp"
            app:fabCustomSize="108dp"
            app:elevation="6dp"
            app:borderWidth="0dp"
            android:contentDescription="금주 중지하기"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금주 중지하기"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>

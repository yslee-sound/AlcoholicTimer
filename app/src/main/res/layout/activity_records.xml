<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금주 활동 기록"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- 기간 선택 탭 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/btnYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 요약 정보 -->
        <TextView
            android:id="@+id/tvPeriodSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택 기간: 전체"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- 통계 카드 -->
        <LinearLayout
            style="@style/CardLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- 주간 통계 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 주"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvWeeklyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0일"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- 월간 통계 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvMonthlyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0일"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- 전체 통계 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvTotalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0일"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_accent"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSummary"
            style="@style/TextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="금주를 시작한지 0일이 지났습니다."
            android:layout_marginBottom="16dp"/>

        <!-- 중단: 통계 및 그래프 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="통계 및 그래프"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- 금주 일수 그래프 -->
        <FrameLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="16dp">

            <!-- 그래프는 코드에서 동적으로 추가됨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="금주 일수 누적 그래프"
                android:textSize="16sp"/>
        </FrameLayout>

        <!-- 최고 기록/최장 금주 일수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고 기록"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvTotalAbstinence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전체 누적 금주 일수: 0일"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvLongestStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최장 연속 금주 기록: 0일"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvLastFailure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마지막 금주 실패: 없음"/>
        </LinearLayout>

        <!-- 하단: 상세 기록 리스트 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레벨 달성 히스토리"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- 레벨 달성 히스토리 목록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLevelHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"/>

    </LinearLayout>
</ScrollView>

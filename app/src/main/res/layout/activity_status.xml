<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvDaysCount"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘로 금주 0일째!"
        android:layout_marginBottom="16dp"/>

    <!-- 레벨 배지 섹션 -->
    <LinearLayout
        style="@style/CardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvLevel"
            style="@style/TextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 0"/>

        <TextView
            android:id="@+id/tvLevelTitle"
            style="@style/TextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새싹 도전자"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 진행 상황 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 레벨까지 0일 남았습니다"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <ProgressBar
            android:id="@+id/progressLevel"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progressTint="@color/button_primary"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMessage"
        style="@style/TextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 의지를 응원합니다!"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewRecords"
        style="@style/ButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 기록 보기"
        android:layout_marginTop="24dp"/>

</LinearLayout>

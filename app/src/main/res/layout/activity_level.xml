<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 현재 레벨 카드 -->
        <LinearLayout
            android:id="@+id/layoutCurrentLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF9800"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <!-- 현재 레벨 배지와 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- 레벨 배지 -->
                <View
                    android:id="@+id/viewCurrentLevelBadge"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#FFFFFF"
                    android:layout_marginEnd="12dp" />

                <!-- 현재 레벨명 -->
                <TextView
                    android:id="@+id/tvCurrentLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시작 준비"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- 다음 레벨까지 남은 일수 -->
            <TextView
                android:id="@+id/tvNextLevelDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음 레벨까지 1일 남음"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- 진행률 프로그레스바 -->
            <ProgressBar
                android:id="@+id/progressBarLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:max="100"
                android:progressTint="#FFFFFF"
                android:progressBackgroundTint="#33FFFFFF" />

        </LinearLayout>

        <!-- 모든 레벨 목록 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="모든 레벨"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- 모든 레벨 카드들을 직접 생성 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 레벨 1: 첫걸음 성공 -->
            <LinearLayout
                android:id="@+id/levelCard1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel1Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel1Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="첫걸음 성공"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel1Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel1Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="금주의 첫 걸음을 내딛었습니다!"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 2: 의지 다지기 -->
            <LinearLayout
                android:id="@+id/levelCard2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel2Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel2Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="의지 다지기"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel2Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel2Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3일간의 의지를 보여주었습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 3: 일주일 챌린지 -->
            <LinearLayout
                android:id="@+id/levelCard3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel3Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel3Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="일주일 챌린지"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel3Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel3Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일주일 동안 금주에 성공했습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 4: 2주 달성 -->
            <LinearLayout
                android:id="@+id/levelCard4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel4Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel4Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2주 달성"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel4Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel4Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2주간의 꾸준함을 보여주었습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 5: 한달 마스터 -->
            <LinearLayout
                android:id="@+id/levelCard5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel5Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel5Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="한달 마스터"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel5Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel5Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한 달간의 금주를 완주했습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 6: 100일 영웅 -->
            <LinearLayout
                android:id="@+id/levelCard6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel6Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel6Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100일 영웅"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel6Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel6Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100일간의 대단한 성과를 이뤘습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- 레벨 7: 1년 전설 -->
            <LinearLayout
                android:id="@+id/levelCard7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivLevel7Badge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_level_locked"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/tvLevel7Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1년 전설"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333" />

                        <TextView
                            android:id="@+id/tvLevel7Days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="365일"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLevel7Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1년간의 전설적인 금주를 달성했습니다"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

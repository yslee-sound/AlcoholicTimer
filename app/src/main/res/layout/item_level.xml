<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- 레벨 배지 -->
    <View
        android:id="@+id/viewLevelBadge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#FF9800"
        android:layout_marginEnd="16dp" />

    <!-- 레벨 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 레벨명과 색상 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvLevelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="한달의 기적"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvLevelColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오렌지"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 레벨 범위 -->
        <TextView
            android:id="@+id/tvLevelRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14~29일"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- 레벨 설명 -->
        <TextView
            android:id="@+id/tvLevelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한 달의 기적을 만들어가고 있습니다"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- 현재 레벨 표시 -->
    <TextView
        android:id="@+id/tvCurrentIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← 현재"
        android:textSize="12sp"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginStart="8dp" />

</LinearLayout>

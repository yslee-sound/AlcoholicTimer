<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ Splash theme using SplashScreen attributes on app-based theme -->
    <style name="Theme.AlcoholicTimer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground_inset</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.AlcoholicTimer</item>
    </style>
</resources>

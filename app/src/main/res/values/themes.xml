<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 앱 전역 테마: 플랫폼에 존재하는 NoActionBar 테마를 부모로 사용 -->
    <style name="Theme.AlcoholicTimer" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <!-- 상태바를 시스템이 항상 표시하도록 보장 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 윈도우가 시스템 바 배경을 그리도록 명시 (API 21+) -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- 상태바/내비게이션바 배경은 흰색 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- 기본 윈도우 배경은 흰색으로 설정(스플래시는 Splash 테마에서만 사용) -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 일부 기기에서 상태바 아래 얇은 선(오버레이) 제거 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 스플래시 테마 (Android 11 이하용) -->
    <style name="Theme.AlcoholicTimer.Splash" parent="@style/Theme.AlcoholicTimer">
        <!-- windowBackground를 스플래시 배경으로 사용 -->
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- 시스템 바 색상: 스플래시 중에도 상/하단 바는 흰색으로 고정 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <!-- 불투명 테마 변형: 활동이 반투명하지 않도록 보장 -->
    <style name="Theme.AlcoholicTimer.Opaque" parent="@style/Theme.AlcoholicTimer">
        <!-- 반투명 플래그가 없도록 윈도우 배경을 흰색으로 강제 설정 -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AlcoholicTimer" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 시스템 네비게이션 바 색상 -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- 기본 색상 -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/button_primary</item>
        <item name="colorPrimaryDark">@color/button_primary</item>
        <item name="colorAccent">@color/text_accent</item>

        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_accent</item>

        <!-- 버튼 스타일 -->
        <item name="android:buttonStyle">@style/ButtonPrimary</item>

        <!-- 기본 폰트 -->
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
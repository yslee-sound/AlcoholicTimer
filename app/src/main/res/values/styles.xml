<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 텍스트 스타일 -->
    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLevel">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 버튼 스타일 -->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_outline_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:background">@drawable/btn_secondary_outline_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <!-- 카드 스타일 -->
    <style name="CardLevel">
        <item name="android:background">@drawable/card_outline_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- 카드 테두리 스타일 -->
    <style name="CardBorder">
        <item name="android:background">@drawable/card_outline_background</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- 레벨 숫자 스타일 -->
    <style name="TextLevelNumber">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 배지 스타일 -->
    <style name="BadgeLevel">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 카드 컨테이너 스타일 -->
    <style name="CardContainer">
        <item name="android:background">@drawable/card_outline_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- 입력 필드 스타일 -->
    <style name="InputField">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/input_outline_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

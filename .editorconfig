# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# XML files (including strings.xml)
[*.xml]
charset = utf-8
indent_style = space
indent_size = 4

# Kotlin files
[*.kt]
charset = utf-8
indent_style = space
indent_size = 4

# Gradle files
[*.gradle.kts]
charset = utf-8
indent_style = space
indent_size = 4

# Properties files
[*.properties]
charset = utf-8

# Markdown files
[*.md]
trim_trailing_whitespace = false

